<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.CrystalClear" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/crystal_clear_button_bg</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">6dp</item>
    </style>

    <style name="Circular" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TitleActionBar" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="Button.Underline" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/underline</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">6dp</item>
    </style>

    <style name="Button.OrangeCorners" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@color/ubuntu_orange</item>
        <item name="android:insetTop">5dp</item>
        <item name="android:insetBottom">3dp</item>
        <item name="android:insetRight">15dp</item>
        <item name="android:insetLeft">15dp</item>

    </style>

</resources>