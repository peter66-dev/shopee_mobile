<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:weightSum="0.44"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.22"
            android:background="@drawable/underline"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCloseBottomDialog"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/transparent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_xmark_light"
                app:iconTint="#B3000000"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="25dp"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="0.4"
                    >
                    <ImageView
                        android:id="@+id/imageViewThumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/product4" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/txvPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="đ62.000"
                        android:textColor="#F80114"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Kho: 10000"
                        android:textSize="17sp"

                        />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:orientation="horizontal"
            android:background="@drawable/underline"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Số lượng"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:textSize="17sp"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDecreaseQuantity"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_minus_light"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="15sp"
                    app:iconTint="@color/red"
                    app:strokeColor="@color/red"
                    android:enabled="false"
                    />

                <TextView
                    android:id="@+id/txvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIncreaseQuantity"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/red"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_plus_light"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="15sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cart_dialog.btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/ubuntu_orange"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:text="Thêm vào giỏ hàng"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:textStyle="bold"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="15sp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>